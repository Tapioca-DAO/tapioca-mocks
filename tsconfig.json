{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@tapioca-sdk/*": ["gitmodule/tapioca-sdk/src/*"],
      "@typechain/*": ["gen/typechain/*"],
      "@tapioca-periph/config":["gitmodule/tapioca-periph/tasks/deploy/DEPLOY_CONFIG.ts"],
    }
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./test",
    "./typechain",
    "./tasks",
    "./deploy"
  ]
}
